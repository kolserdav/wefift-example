{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                           
    "checkJs": true,                                
    "declaration": true,                             
    "declarationMap": true,                         
    "emitDeclarationOnly": true,      
    "sourceMap": true,               
    "outDir": "./dist",                                  
    "rootDir": "./src",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                              
  }
}
